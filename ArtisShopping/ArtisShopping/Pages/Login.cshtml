@page
@model ArtisShopping.Pages.LoginModel
@{
}
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Đăng Nhập</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-12 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form  method="post" asp-page-handler="Login">
                    <div class="control-group">
                        <input type="email" class="form-control" id="name" placeholder="Nhập Email"
                               required="required" data-validation-required-message="Vui lòng nhập email" name="Email"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="password" class="form-control" id="subject" placeholder="Nhập mật khẩu"
                               required="required" data-validation-required-message="Vui lòng nhập mật khẩu" name="Password" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                            Đăng nhập
                        </button>
                        <button class="btn btn-info py-2 px-4" type="submit" id="sendMessageButton">
                            <a asp-page="./Register" style="text-decoration:none">
                                Đăng kí
                            </a>
                           
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>
